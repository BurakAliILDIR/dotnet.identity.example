
@{
    ViewData["Title"] = "Index";
}

@model List<AdminViewModel.RoleViewModel>

<a class="btn btn-success" asp-controller="Roles" asp-area="Admin" asp-action="Create">Rol Ekle</a>

<h1>Roller</h1>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
            </thead>
            <tbody>
            @foreach (AdminViewModel.RoleViewModel item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>