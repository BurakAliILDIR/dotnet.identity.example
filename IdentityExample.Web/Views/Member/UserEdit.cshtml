@{
    ViewData["Title"] = "UserEdit";
}
@model UserEditViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Kullanıcı Bilgileri Güncelleme</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" asp-for="UserName"></label>
                <input type="text" class="form-control" asp-for="UserName">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input type="tel" class="form-control" asp-for="PhoneNumber">
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="BirthDate"></label>
                <input class="form-control" asp-for="BirthDate">
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="City"></label>
                <input type="text" class="form-control" asp-for="City">
                <span class="text-danger" asp-validation-for="City"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Gender"></label>
                <select class="form-control" asp-for="Gender" asp-items="ViewBag.genders"></select>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Picture"></label>
                <input class="form-control" asp-for="Picture">
                <span class="text-danger" asp-validation-for="Picture"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>